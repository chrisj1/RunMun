@{
    ViewData["Title"] = "Home Page";
}

<link href='https://fonts.googleapis.com/css?family=Exo:400,900' rel='stylesheet' type='text/css'>
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

<link href="~/css/fullscreen.css" rel="stylesheet" type="text/css" />
<div class="wrapper">
    <div class="message">
        <h1>@ConfrenceConfiguration.Configuration["Long_name"]</h1>
        <div id="myCarousel" class="carousel slide wrapper" data-ride="carousel">
            <!-- Wrapper for slides -->
            <div class="carousel-inner wrapper">
                <div class="item active">
                    @ConfrenceConfiguration.Configuration["Description"]
                </div>

                <div class="item">
                    <h2>Committees</h2>
                    <p> Large variety of committees! We have something for everyone, from the the Brettonwoods Confrence to the World Health Organization to Star Wars.</p>
                    <div class="btn btn-default">
                        View our committees
                    </div>
                </div>

                <div class="item">
                    <h2>Text 3</h2>
                </div>
            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
     </div>
</div>

